# Production Environment Configuration
# Copy this file to .env.prod and update with production values

# ============================================
# Database Configuration
# ============================================
MYSQL_ROOT_PASSWORD=change_this_secure_root_password
MYSQL_PASSWORD=change_this_secure_db_password

# ============================================
# Payment Gateway (Razorpay)
# ============================================
RAZORPAY_KEY_ID=rzp_live_your_production_key
RAZORPAY_KEY_SECRET=your_production_razorpay_secret

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your_app_specific_password

# ============================================
# OCI Object Storage Configuration
# ============================================
OCI_NAMESPACE=your_oci_namespace
OCI_BUCKET=car-rental-documents
OCI_REGION=us-phoenix-1

# ============================================
# Application Settings
# ============================================
SERVER_PORT=8080
SPRING_APPLICATION_NAME=carrentalsystem-prod
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# ============================================
# Nginx Configuration
# ============================================
DOMAIN_NAME=your-domain.com
SSL_CERT_PATH=/etc/nginx/certs/cert.pem
SSL_KEY_PATH=/etc/nginx/certs/key.pem

# ============================================
# Database Backup Configuration
# ============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================
# Monitoring (Optional)
# ============================================
MONITORING_ENABLED=true
LOG_LEVEL=INFO
